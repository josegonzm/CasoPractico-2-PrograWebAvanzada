@page
@model Web.Pages.Medicamentos.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f9f9f9;
        margin: 0;
        padding: 0;
    }

    h1 {
        font-size: 2.5rem;
        text-align: center;
        margin-top: 50px;
        color: #333;
    }

    h3 {
        font-size: 1.5rem;
        color: #666;
        text-align: center;
        margin-bottom: 30px;
    }

    hr {
        border-top: 2px solid #007bff;
        margin-bottom: 20px;
    }

    .row {
        margin-left: 0;
        margin-right: 0;
    }

    .col-sm-2, .col-sm-10 {
        padding: 10px;
    }

    .delete-form {
        text-align: center;
    }

        .delete-form input[type="submit"] {
            background-color: #dc3545;
            color: #fff;
            border: none;
            padding: 10px 20px;
            cursor: pointer;
            margin-right: 10px;
        }

            .delete-form input[type="submit"]:hover {
                background-color: #c82333;
            }

    .back-link {
        display: block;
        text-align: center;
        margin-top: 20px;
    }

        .back-link a {
            color: #007bff;
        }

            .back-link a:hover {
                text-decoration: underline;
            }
</style>

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Medicamento</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Medicamento.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Medicamento.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Medicamento.Indicaciones)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Medicamento.Indicaciones)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Medicamento.Fecha_Caducidad)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Medicamento.Fecha_Caducidad)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Medicamento.Efectos_Secundarios)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Medicamento.Efectos_Secundarios)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Medicamento.Fabricante)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Medicamento.Fabricante)
        </dd>
    </dl>

    <div class="delete-form">
        <form method="post">
            <input type="hidden" asp-for="Medicamento.Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>
