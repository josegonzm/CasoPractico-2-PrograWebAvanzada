@page
@model Web.Pages.Medicamentos.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f9f9f9;
        margin: 0;
        padding: 0;
    }

    h1 {
        font-size: 2.5rem;
        text-align: center;
        margin-top: 50px;
        color: #333;
    }

    h4 {
        font-size: 1.5rem;
        color: #666;
    }

    hr {
        border-top: 2px solid #007bff;
        margin-bottom: 20px;
    }

    .row {
        margin-left: 0;
        margin-right: 0;
    }

    .col-sm-2, .col-sm-10 {
        padding: 10px;
    }

    .details-list dt {
        font-weight: bold;
    }

    .details-list dd {
        margin-left: 0;
    }

    .action-links {
        margin-top: 20px;
    }

        .action-links a {
            margin-right: 10px;
            color: #007bff;
        }

            .action-links a:hover {
                text-decoration: underline;
            }
</style>

<h1>Details</h1>

<div>
    <h4>Medicamento</h4>
    <hr />
    <dl class="row details-list">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Medicamento.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Medicamento.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Medicamento.Indicaciones)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Medicamento.Indicaciones)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Medicamento.Fecha_Caducidad)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Medicamento.Fecha_Caducidad)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Medicamento.Efectos_Secundarios)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Medicamento.Efectos_Secundarios)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Medicamento.Fabricante)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Medicamento.Fabricante)
        </dd>
    </dl>
</div>

<div class="action-links">
    <a asp-page="./Edit" asp-route-id="@Model.Medicamento?.Id">Edit</a>
    <a asp-page="./Index">Back to List</a>
</div>
