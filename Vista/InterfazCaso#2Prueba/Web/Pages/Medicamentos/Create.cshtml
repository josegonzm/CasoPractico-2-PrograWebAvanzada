@page
@model Web.Pages.Medicamentos.CreateModel

@{
    ViewData["Title"] = "Create";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f9f9f9;
        margin: 0;
        padding: 0;
    }

    h1 {
        font-size: 2.5rem;
        text-align: center;
        margin-top: 50px;
        color: #333;
    }

    h4 {
        font-size: 1.5rem;
        color: #666;
    }

    hr {
        border-top: 2px solid #007bff;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    input[type="submit"] {
        background-color: #007bff;
        color: #fff;
        border: none;
        padding: 10px 20px;
        cursor: pointer;
    }

        input[type="submit"]:hover {
            background-color: #0056b3;
        }

    .back-link {
        margin-top: 20px;
        display: block;
        text-align: center;
        color: #007bff;
    }

        .back-link:hover {
            text-decoration: underline;
        }
</style>

<h1>Create</h1>

<h4>Medicamento</h4>
<hr />

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Medicamento.Nombre" class="control-label"></label>
                <input asp-for="Medicamento.Nombre" class="form-control" />
                <span asp-validation-for="Medicamento.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Medicamento.Indicaciones" class="control-label"></label>
                <input asp-for="Medicamento.Indicaciones" class="form-control" />
                <span asp-validation-for="Medicamento.Indicaciones" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Medicamento.Fecha_Caducidad" class="control-label"></label>
                <input asp-for="Medicamento.Fecha_Caducidad" class="form-control" />
                <span asp-validation-for="Medicamento.Fecha_Caducidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Medicamento.Efectos_Secundarios" class="control-label"></label>
                <input asp-for="Medicamento.Efectos_Secundarios" class="form-control" />
                <span asp-validation-for="Medicamento.Efectos_Secundarios" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Medicamento.Fabricante" class="control-label"></label>
                <input asp-for="Medicamento.Fabricante" class="form-control" />
                <span asp-validation-for="Medicamento.Fabricante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
</style>
