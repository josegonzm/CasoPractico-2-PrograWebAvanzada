@page
@model Web.Pages.Recetas.IndexModel

@{
    ViewData["Title"] = "Index";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f9f9f9;
        margin: 0;
        padding: 0;
    }

    h1 {
        font-size: 2.5rem;
        text-align: center;
        margin-top: 50px;
        color: #007bff; 
    }

    a {
        text-decoration: none;
        color: #007bff;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        padding: 10px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #007bff;
        color: #fff;
    }

    tr:hover {
        background-color: #f5f5f5;
    }

    .action-links a {
        margin-right: 5px;
        margin-bottom: 5px;
    }

 
    .btn {
        display: inline-block;
        padding: 8px 12px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        text-align: center;
        text-decoration: none;
        transition: background-color 0.3s;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-secondary {
        background-color: #6c757d;
        color: #fff;
    }

        .btn-secondary:hover {
            background-color: #545b62;
        }

    .btn-info {
        background-color: #17a2b8;
        color: #fff;
    }

        .btn-info:hover {
            background-color: #117a8b;
        }

    .btn-danger {
        background-color: #dc3545;
        color: #fff;
    }

        .btn-danger:hover {
            background-color: #bd2130;
        }
</style>

<h1>Recetas</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New</a>
</p>

<table >
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Receta[0].Paciente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Receta[0].Medico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Receta[0].FechaEmision)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Receta[0].Medicamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Receta[0].Instrucciones)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Receta[0].Expira)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Receta[0].Comentarios)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Receta[0].Estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Receta)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Paciente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Medico)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaEmision)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Medicamento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Instrucciones)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Expira)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comentarios)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-secondary">Edit Estado</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
